<configuration>
  <system.web>
    <compilation batch="false" />
  </system.web>

  <system.webServer>

    <handlers>
      <add name="iisnode" path="dist/server/app.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="foobot">
          <match url="/*" />
          <action type="Rewrite" url="dist/server/app.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>
